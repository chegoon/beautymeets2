<h1>Listing brands</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>View count</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.company %></td>
    <td><%= brand.name %></td>
    <td><%= brand.description %></td>
    <td><%= brand.image %></td>
    <td><%= brand.view_count %></td>
    <td><%= link_to 'Show', brand %></td>
    <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
    <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

