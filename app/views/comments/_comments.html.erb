<% if @comments.present? %>
<div id="comments">
	<% @comments.each do |comment| %>
	<div class="row comment">
		<div class="small-2 large-2 columns">
			<%= image_tag(comment.user.image_url(:thumb) ) %>
		</div>
		
		<div class="small-10 large-10 columns" style="padding-left:0;">
			<div class="row">
				<div class="large-12 columns">
					<h6 class="subheader"><%= comment.user.name.blank? ? comment.user.email : comment.user.name %> :</h6>
					<div style="height:auto;">
						<p><%= simple_format comment.body %></p>
						<%= link_to "&nbsp;X".html_safe, [@commentable, comment], confirm: 'Are you sure?', method: :delete  if can? :manage, comment %>
						<span class="right" style="color:#CCC;font-size:10px;"><%= time_ago_in_words(comment.created_at) %> ago</span>
					</div>
				</div>
			</div>
			<hr>
			<% comment.children.each do |reply| %>
				<div class="row" style="margin-bottom:5px;">
					<div class="small-2 large-2 columns">
						<%= image_tag(comment.user.image_url(:thumb)) %>
					</div>
					<div class="small-10 large-10 columns" style="padding-left:0;">
						<p><%= simple_format reply.body %></p>
						<span class="right" style="color:#CCC; font-size:10px;"><%= time_ago_in_words(reply.created_at) %> ago</span>
					</div>
				</div>
			<% end %>
			<div class="row" style="margin-top:5px;">
				<div class="large-12 columns">
				<%= simple_form_for [@commentable, @comment] do |f| %>
					<%= f.hidden_field :parent_id, :value => comment.id %>

				    <div class="row">
				      <div class="large-9 columns">
				        <%= f.text_area :body, rows: 4, :placeholder => "" %>

				      </div>
				      <div class="large-3 columns">
				      	<%= f.button :submit, 'Reply It', :class => "tiny " %>
				      </div>
				    </div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>
<% end %>