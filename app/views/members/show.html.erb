<div class="row" >
  <div class="small-12 columns"> 
  	<div style="height:70px; position:relative; ">
			<h4 class="subheader" style="letter-spacing:-0.1px; position:absolute; bottom:10px; width:auto;">
				My Page
    	</h4>
    </div>
  </div>    
</div>

<div class="row">
	<div class="small-12 small-centered columns" style="background:#FFF;">
		<%= render 'sub_nav' %>


		<%= link_to '프로필 수정', edit_user_registration_path(@member.user), :class => "right button tiny secondary" if (can? :manager, current_user) %>
		<table>
			<tbody>
				<tr>
					<td>
						이름
					</td>
					<td>
						<%= @member.user.name %>
					</td>
				</tr>
				<tr>
					<td>
						E-mail
					</td>
					<td>
						<%= @member.user.email %>
					</td>
				</tr>
				<tr>
					<td>
						성별
					</td>
					<td>
						<%= @member.gender.name if @member.gender.present? %>
		<%= link_to '수정', edit_member_path(current_user.profile), :class => "right button tiny secondary"  if (can? :manager, @member) %>
					</td>
				</tr>
				<tr>
					<td>
						생년월일
					</td>
					<td>
						<%= best_in_place @member, :year_of_birth, type: :integer if @member.year_of_birth.present?%>
		<%= link_to '수정', edit_member_path(current_user.profile), :class => "right button tiny secondary"  if (can? :manager, @member) %>
					</td>
				</tr>
			</tbody>
		</table>
		<hr>
		<%= link_to '피부정보 수정', edit_member_path(current_user.profile), :class => "right button tiny secondary"  if (can? :manager, @member) %>
		<h4>피부 타입</h4>		
		<ul class="inline-list">
		<% @member.skin_type_list.each do |t| %>
			<li><span class="label secondary radius"><%= link_to t, tag_path(t) %></span></li>
		<% end %>
		</ul>
		<h4>피부 톤</h4>
		<ul class="inline-list">
			<% @member.skin_tone_list.each do |t| %>
				<li><span class="label secondary radius"><%= link_to t, tag_path(t) %></span></li>
			<% end %>
		</ul>
		<h4>피부 고민</h4>
		<ul class="inline-list">
			<% @member.skin_trouble_list.each do |t| %>
				<li><span class="label secondary radius"><%= link_to t, tag_path(t) %></span></li>
			<% end %>
		</ul>
		<hr>
		<%= link_to "로그아웃", destroy_user_session_path, :class => "right button secondary", method: :delete  %>
	</div>
</div>