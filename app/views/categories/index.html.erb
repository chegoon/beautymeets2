<h1>Listing Categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category_path(category) %></td>
    <td><%= category.parent_name %></td>
    <td><%= link_to 'Edit', edit_category_path(category) if can? :manage, category %></td>
    <td><%= link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete if can? :manage, category %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_category_path if can? :manage, Category %>
