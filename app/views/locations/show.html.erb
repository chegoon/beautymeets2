<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

    
<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @location.name %>
</p>

<p>
  <b>Description:</b>
  <%= @location.description %>
</p>

<p>
  <b>Latitude:</b>
  <%= @location.latitude %>
</p>

<p>
  <b>Longitude:</b>
  <%= @location.longitude %>
</p>

<p>
  <b>Gmaps:</b>
  <%= @location.gmaps %>
</p>
<div class="row">
  <div class="small-12 medium-8 columns">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=600x300&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}" %>
  </div>
</div>

<% @beautyclasses.each do |bclass| 
  @pictureable = bclass
  @pictures = bclass.pictures
  %>
  <%= render :partial => 'pictures/gallery' %>
<% end %>

<%= render @beautyclasses %>

<%= link_to 'Edit', edit_location_path(@location) if can? :manager, Location %> |
<%= link_to 'Back', locations_path %>
