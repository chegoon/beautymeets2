<div class="small-12 medium-4 large-4 columns">
	<div class="row" style="padding:0 10px 4px 10px;">
		<div class="small-5 medium-12 columns" style="text-align:center; ">
			<a class="video-card-thumb th" href="<%= video_path(rec) %>" style='border:0; width:100%; min-width:110px; max-width:150px; height:68px; background-size: 100%; background-image: url(<%= "#{rec.thumb_url}" %>);'></a>
			<%= #link_to image_tag(rec.thumb_url, :style => "width:120px; height:auto; ", :class => "th"), rec 
			%>
		</div>
		<div class="small-7 medium-12 columns" >
			<h5 style="line-height:101%; width:auto; "><small><%= truncate(rec.title, 44) %></small></h5>
		</div>
	</div>
</div>