<% if @items.present? %>
	<% @items.each do |item| %>
	<div class="row" style="margin-top:10px;">
		<div class="small-3 large-3 columns">
			<%= image_tag item.thumbnail.image_url(:medium) if item.thumbnail.present? %>
		</div>
		<div class="small-9 large-9 columns">
	    <span ><%= link_to item.name, item_path(item) %></span><br/>
	    <span style="color:#999;"><small><strong><%= item.brand.try(:name) %></strong></small></span><br/>
	    <span><%= truncate(item.brand.try(:description), 50) %></span>
		</div>
	</div>
	<% end %>
<% else %>
<% end %>
