<% if @itemizable.present? && @itemizable.class.name != "Item" %>
  <%= simple_form_for [@itemizable, @item] do |f| %>
    <%= render partial: 'form_input', locals: { :f => f } %>
  <% end %>
<% else %>
  <%= simple_form_for [@item] do |f| %>
    <%= render partial: 'form_input', locals: { :f => f } %>
  <% end %>
<% end %>