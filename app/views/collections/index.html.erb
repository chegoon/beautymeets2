<h1>Listing collections</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>View count</th>
  </tr>

<% @collections.each do |col| %>
  <tr>
    <td><%= link_to col.title, "/collections/#{col.id}" %></td>
    <td><%= col.description %></td>
    <td><%= col.view_count %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Collection', new_collection_path %>
