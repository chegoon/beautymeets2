<% if @best_items.present? %>
	<div class="welcome-item-header" style=" ">
		<%= image_tag "/assets/hdr_item_popular@2x.png", :style => "width:150px; height:50px;" %>
		<%= link_to image_tag("/assets/btn_plus@2x.png", :alt => "더 살펴보기",  :class => "right welcome-item-more",:style => "width:14px; height:14px;"), {controller: "items", order: "popular_last2w"} %>
	</div>	
	<table style="margin:0 auto; border: 1px solid #e9e9e9;">	
		<tbody>
		<% @best_items.each_with_index do |item, i| %>
			<%= "<tr>".html_safe if ((i%2) == 0) %>
				<td class="welcome-item-cell text-center" style="">
					<%= link_to image_tag(item.thumbnail.image_url(:very_small)), item_path(item) if item.thumbnail.present? %>
				</td>
			<%= "</tr>".html_safe if ((i%2) == 1) %>
		<% end %>
		</tbody>
	</table>
<% end %>