<div class="" style="background:#FFF; padding:6px;">
			
			<% if @best_items.present? %>
				<div class="row">
				<% @best_items.each do |item| %>
					<div class="small-6 medium-12 columns" style="margin-bottom:2.0rem;">
						<div class="text-center" >
						<% if user_signed_in? %>	
							<%= link_to image_tag(item.thumbnail.image_url(:small)), item_path(item) if item.thumbnail.present? %><br/>
						<% else %>
							<%= link_to image_tag(item.thumbnail.image_url(:small)), item_path(item) if item.thumbnail.present? %><br/>
						<% end %>
						<span class="subheader" style="line-height:101%; width:auto; "><%= link_to truncate(item.name, 16), item_path(item) %></span>
						</div>
					</div>
				<% end %>
				</div>	
			<% end %>
		</div>