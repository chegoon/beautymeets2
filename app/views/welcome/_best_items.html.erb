<div class="" style="background:#FFF; padding:6px;">
			<h6 class="text-center"><strong>가장 많이 보는 화장품</strong></h6>
			<% if @best_items.present? %>
				<div class="row">
				<% @best_items.each do |item| %>
					<div class="small-6 medium-3 large-12 columns">
						<div class="text-center" style="margin-bottom:10px;">
						<%= link_to image_tag(item.thumbnail.image_url(:small)), item_path(item) if item.thumbnail.present? %><br/>
						<h6 class="subheader" style="line-height:101%; width:auto; "><%= link_to truncate(item.name, 16), item_path(item) %></h6>
						</div>
					</div>
				<% end %>
				</div>	
			<% end %>
		</div>