<% page_title "Welcome to BEAUTYMEETS" %>
<% page_desc "Discover, Learn, and Be beautiful in BEAUTYMEETS!!" %>
	    	
			<div class="row ">
				<div class="small-12 welcome-jumbo " >
<% if @events.present? %>
<!--
	<ul class="jumbo-orbit-content" data-orbit>
		<li data-orbit-slide="headline-1 welcome-jumbo">
-->
<div class="slider">
  <ul class="slides" >			
  	<li class="slide"  >
<% end %>	
					<% if user_signed_in? %>
						<div class="panel callout " style="border:0; padding:2rem;">
							<h2>Hi, <%= current_user.name || current_user.email  %></h2>
							<h6 class="subheader">There are <i class="fa fa-bell-<%= 'o' if (@notifications.count == 0) %> fa-fw"></i><%= link_to "#{@notifications.try(:count)} notifications", member_notifications_path(@member) if current_user.has_role? :member %> you need to check</h6>
						</div>
					<% else %>
						<div class="panel " style="border:0; height:24rem; background-image: url('/assets/welcome_jumbo1.jpg');background-size:cover; background-position:center; ">
				      <div class="row">
				      	<div class="small-12 medium-9 columns" style="margin-top:10rem; ">
									<h3  style="color:#FFF; letter-spacing:-0.5px;">
										청담동 아티스트의 진짜노하우 가득한<br/>
										1:1 온라인 무료 뷰티클래스,<br/>
										<span style="color:#9bfff4;">BEAUTYMEETS</span>
									</h3>
									<div style="margin-top:2.4rem;">
									<% if !user_signed_in? %>
							      <%= link_to image_tag("/assets/btn_join@2x.png", :alt => "가입하기", :class => "left", :style => "width:136px; height:40px; margin-right:10px;"), new_user_registration_path %>
							      <%= link_to image_tag("/assets/btn_login@2x.png", :alt => "로그인하기", :class => "left",  :style => "width:136px; height:40px;"), new_user_session_path  %>
									<% end %>
									</div>
								</div>
							</div>
						</div>
					<% end %>
<% if @events.present? %>
		</li>
	<% @events.each_with_index do |event, i| %>
		  
		  <!-- <li data-orbit-slide="headline-<%= i %>"> -->
		  <li class="slide"  style="padding:0;">
		  	<%= render event%>
		  </li>
	<% end %>
    </ul>
  </div>
<% end %>
				</div>
			</div>

<div class="row" style="margin-bottom:30px;" >
	<div class="small-12 medium-12 large-8 columns" style="">
		<div class="welcome-tutorial-card-outter" style="">
			<div class="row" >
				<div class="small-12 columns" >
					<div class="welcome-tutorial-header" >
					<%= image_tag "/assets/hdr_tutorial_latest
					@2x.png", :style => "width:200px; height:50px;" %>
					<%= link_to image_tag("/assets/btn_more@2x.png", :alt => "튜토리얼 더 살펴보기", :class => "welcome-tutorial-more right", :style => "width:80px; height:20px;"), {:controller => "tutorials", :order => "newly"} %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="small-12 columns" >
					<%= render partial: @latest_tutorials, locals: { cards_in_row: "2" } %>
				</div>

			</div>
			<div class="row">
				<div class="small-12 columns" style="">
					<div class="welcome-tutorial-header">
					<%= image_tag "/assets/hdr_tutorial_popular@2x.png", :style => "width:200px; height:50px;" %>
					<%= link_to image_tag("/assets/btn_more@2x.png", :alt => "튜토리얼 더 살펴보기", :class => "welcome-tutorial-more show-for-small-only right",:style => "width:80px; height:20px;"), {:controller => "tutorials", :order => "popular"} %>
					</div>
				</div>

			</div>
			<div class="row">
				<div class="small-12 columns" >
					<%= render partial: @best_tutorials, locals: { cards_in_row: "2" }  %>
				</div>
			</div>
		</div>
	</div>
	<div class="small-12 medium-12 large-4 columns" style="padding:0 10px 0 10px;">
		<div class="welcome-item-outter" style="">
			<div class="row">
				<div class="small-12 medium-6 large-12 columns" >
					<div class="" style="padding:0 0 20px 0;">
					<%= render "latest_items" %>
					</div>
				</div>
				<div class="small-12 medium-6 large-12 columns" >
					<div class="" style="padding:0 0 20px 0;">
	    			<%= render "best_items" %>
	    		</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="small-12 columns" >
		<div class="row">
			<div class="small-12 columns" >
				<div class="welcome-post-header" >
					<%= image_tag "/assets/hdr_post.png", :class => "show-for-medium-up"  %>
					<span class="show-for-small-only subheader" style="font-size:1.3rem; letter-spacing:-1px; ">최신뷰티밋츠 포스트</span>
					<%= link_to image_tag("/assets/btn_more@2x.png", :alt => "포스트 더 살펴보기", :class => "right welcome-post-more"), posts_path %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="small-12">
				<%= render @latest_posts %>
			</div>
		</div>
	</div>
</div>
