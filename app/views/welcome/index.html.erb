</div>
<div class="row">
	<div class="small-12 medium-6 columns" >
		<div class="fb-like-box" data-href="https://www.facebook.com/beautymeets.page" data-width="370px" data-height="510px" data-header="false" data-show-border="false" data-colorscheme="light" data-show-faces="false" data-header="false" data-stream="true" data-show-border="false">
		</div>
		<div class="fb-like" data-href="http://www.facebook.com/beautymeets.page"  data-send="false" data-width="320px;" data-show-faces="false">
		</div>
	</div>
	<div class="small-12 medium-6 columns" >
		<h5 class="subheader"><a href="http://blog.beautymeets.com"><%= image_tag "blog_logo.png" %> blog</a></h5>
		<% if @blog_rss && @blog_rss.entries.present? %>
		<% @blog_rss.entries.first(5).each_with_index do |entry, i| %>
				<h6 class="subheader"><%= link_to entry.title.unpack('U*').pack('U*'), entry.link %>&nbsp;<small>| <%= entry.category.unpack('U*').pack('U*') %></small></h6>
				<p>
					<%= truncate(entry.description.unpack('U*').pack('U*'), 60) %>
					<small class="right"><%= entry.pubDate.strftime("%Y-%m-%d") %></small>
				</p>
				<%= "<hr>".html_safe if i < 4 %>
		<% end %>
		<% end %>
	</div>
</div>
