
<% if @latest_items.present? %>
	<div class="welcome-item-header" style=" ">
		<%= image_tag "/assets/hdr_item_latest.png", :class => "show-for-medium-up"   %>
		<span class="show-for-small-only subheader" style="font-size:1.3rem; padding-up:0; 
  letter-spacing:-1px; ">최신 화장품</span>
		<%= link_to image_tag("/assets/btn_plus@2x.png", :alt => "더 살펴보기", :style => "width:14px; height:14px;", :class => "right welcome-item-more"), items_path %>
	</div>	
	<!-- <div class="table" style="background:#FFF;"> -->
	<table style="margin:0 auto; border: 1px solid #e9e9e9;">	
		<tbody>
		<% @latest_items.each_with_index do |item, i| %>
			<%= #'<div class="table-row">'.html_safe if ((i%2) == 0) 
			%>
			<%= "<tr>".html_safe if ((i%2) == 0) %>
				<!-- <div class="table-cell " style="height:100px; padding:30px;"> -->
				<td class="welcome-item-cell text-center" style="">
					<%= link_to image_tag(item.thumbnail.image_url(:very_small)), item_path(item) if item.thumbnail.present? %>
				</td>
				<!-- </div> -->
			<%= #'</div>'.html_safe if ((i%2) == 1) 
			%>
			<%= "</tr>".html_safe if ((i%2) == 1) %>
		<% end %>
		</tbody>
	</table>
	<!-- </div> -->
<% end %>