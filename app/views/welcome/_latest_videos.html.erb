<% if @latest_videos.present? %>
			<h5>신규 Video</h5>
				<div class="row" style="margin-top:10px; margin-bottom:20px;">
				<% @latest_videos.each do |video| %>
					<div class="small-12 medium-4 large-4 columns">
						<div class="row" style="padding:0 10px 4px 10px;">
							<div class="small-5 medium-12 columns" style="text-align:center; ">
								<a class="video-card-thumb th" href="<%= video_path(video) %>" style='
              background-position: center; border:0; width:100%; min-width:110px; max-width:150px; height:68px; background-size: 100%; background-image: url(<%= "#{video.thumb_url}" %>);'></a>
							</div>
							<div class="small-7 medium-12 columns  text-center" >
								<h6 class="subheader" style="line-height:101%; width:auto; "><%= link_to truncate(video.title, 44), video_path(video) %></h6>
							</div>
						</div>
					</div>
					<h6><%= video.title %></h6>
				<% end %>
			</div>
		<% end %>