
<div class="text-right"><%= link_to "Edit", edit_board_path(board) if can? :manage, board %></div>
<div class="row">
	<div class="small-12 medium-4 columns">
		<%= image_tag board.thumbnail.image_url(:large) if board.thumbnail.present? %>
	</div>
	<div class="small-12 medium-8 columns">
      <h2 class="subheader"><%= best_in_place board, :title %></h2>
      <h3><small class="right"><%= render 'bookmarks/star' %></small></h3>
      <h6 class="subheader ">
				<% if board.categories.present? %>
					<small>Category : </small>
					<% board.categories.each do |category| %>
						&nbsp;<span class=" secondary tiny label"><%= link_to category.name, category_path(category) %></span>
					<% end %>
				<% end %>
			</h6>
      
      
			<p><%= board.description %></p>
    	<p>
    		<% board.tag_list.each do |t| %>
	  	  	<span class="label secondary radius"><%= link_to t, tag_path(t) %></span>
		   	<% end %>
			</p>
  </div>
</div>

<% @pictures = board.pictures if board.pictures %>

<div class="row" style="">
	<div class="small-12 columns " >
		<%= render partial: 'pictures/gallery', locals: { thumb_size: :medium } %>
	</div>
</div>

