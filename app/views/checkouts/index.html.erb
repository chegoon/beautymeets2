<h1>Listing checkouts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Beautyclass</th>
    <th>Checkout status</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @checkouts.each do |checkout| %>
  <tr>
    <td><%= checkout.user %></td>
    <td><%= checkout.beautyclass %></td>
    <td><%= checkout.checkout_status %></td>
    <td><%= checkout.description %></td>
    <td><%= link_to 'Show', checkout %></td>
    <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
    <td><%= link_to 'Destroy', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

