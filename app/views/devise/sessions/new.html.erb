

<div class="row">
  <div class="small-12 medium-8 medium-centered large-8 large-centered columns">
  	<div style="height:90px; position:relative; ">
			<h4 class="subheader" style="letter-spacing:-0.1px; position:absolute; bottom:10px; ">
				<%= render 'layouts/go_back' %>
    		Login
    	</h4>
    </div>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		  </div>
		    <%= f.button :submit, "Sign in", :class => "", :style => "margin-right:5px;" %> 
		    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "button secondary ", :style => "padding-left:70px; background-image: url('/assets/btn_login_facebook.png'); background-repeat: no-repeat; margin-right:5px; " %>
		    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class => "button secondary ", :style => "padding-left:70px; background-image: url('/assets/btn_login_twitter.png'); background-repeat: no-repeat; "  %>

		<% end %>
	</div>
</div>