<h2 class="text-center" style="padding:20px;">Login</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>


    <%= f.button :submit, "Sign in", :class => "" %> 
    <%= link_to "Sign in with FB", user_omniauth_authorize_path(:facebook), :class => "button secondary " %>
    <%= link_to "Sign in with TW", user_omniauth_authorize_path(:twitter), :class => "button secondary " %>

<% end %>

<%= render "devise/shared/links" %>
