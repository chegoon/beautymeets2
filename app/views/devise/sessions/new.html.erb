

<div class="row">
  <div class="small-12 medium-8 medium-centered large-8 large-centered columns">
  	<div style="height:90px; position:relative; ">
  		<h4 class="subheader" style="letter-spacing:-0.1px; position:absolute; bottom:10px; ">
			<%= render 'layouts/go_back' %>
    		Login
    	</h4>
    </div>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		  </div>
		  <div class="row">
		  	<div class="small-12 columns">
			    <%= f.button :submit, "Sign in", :class => "left", :style => "margin-right:5px;" %> 
			    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "left show-for-medium-up button secondary ", :style => "max-width:240px; width:auto;  padding-left:70px; background-image: url('/assets/btn_login_facebook_mobile.png'); background-repeat: no-repeat; margin-right:5px; " %>
			    <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), :class => "left show-for-medium-up button secondary ", :style => "max-width:220px;  width:auto; padding-left:70px; background-image: url('/assets/btn_login_twitter_mobile.png'); background-repeat: no-repeat; "  %>
			    <%= link_to image_tag("/assets/btn_login_facebook_mobile.png", :style => "height:46px; width:auto;"), user_omniauth_authorize_path(:facebook), :class => "left show-for-small-only" %>
			    <%= link_to image_tag("/assets/btn_login_twitter_mobile.png", :style => "height:46px; width:auto;"), user_omniauth_authorize_path(:twitter), :class => "left show-for-small-only", :style => "margin-left:5px;" %>
			  </div>
			</div>
		    
		<% end %>
		
		<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		  <%= link_to "비밀번호가 기억이 안나요", new_password_path(resource_name) %><br />
		<% end -%>
	</div>
</div>
